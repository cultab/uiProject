<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<fx:root alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="name" text="NAME HERE" />
        <Label fx:id="room_name" text="ROOM_NAME" visible="false" />
        <ImageView fx:id="image" fitHeight="74.0" fitWidth="88.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@RadioOn.png" />
            </image>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </ImageView>
        <VBox alignment="CENTER">
            <children>
                <ChoiceBox fx:id="choice" prefWidth="150.0" value="Saved Station 1">
                    <items>

                    </items>
                </ChoiceBox>
                <Slider fx:id="slider" blockIncrement="1.0" layoutX="26.0" layoutY="32.0" majorTickUnit="10.0" max="108.0" min="87.8" minorTickCount="9" prefHeight="0.0" onMouseReleased="#update" prefWidth="140.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            </children>
        </VBox>
        <Button mnemonicParsing="false" onAction="#set_details" text="Details" >
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin></Button>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</fx:root>
