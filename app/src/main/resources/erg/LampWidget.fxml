<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<fx:root prefHeight="99.0" prefWidth="117.0" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" >
        <children>
            <StackPane>
                <children>
                    <ImageView fx:id="Lamp" fitHeight="74.0" fitWidth="88.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@LampOff.jpeg" />
                        </image>
                    </ImageView>
                </children>
            </StackPane>
            <HBox>
                <children>
                    <RadioButton fx:id="On" mnemonicParsing="false" onAction="#TurnLampOn"  text="On">
                        <toggleGroup>
                            <ToggleGroup fx:id="OnOff" />
                        </toggleGroup></RadioButton>
                    <RadioButton fx:id="Off" mnemonicParsing="false" onAction="#TurnLampOn" selected="true" text="Off" toggleGroup="$OnOff" />
                </children>
            </HBox>
            <StackPane>
                <children>
                    <Button mnemonicParsing="false" text="Button" />
                </children>
            </StackPane>
        </children>
</fx:root>

